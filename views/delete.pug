extends layout

block content
  .container-fluid
    .row.justify-content-center.align-items-center.vh-100
      .col-md-6
        .card.shadow-sm
          .card-header.bg-danger.text-white.py-3
            h2.text-center.mb-0 Confirm Deletion
          .card-body
            .container
              p.h5.mb-4 Are you sure you want to delete the Task Details of #{task.title}?
              form(method='POST' action=`/tasks/${task.id}/delete`)
                .text-center
                  button.btn.btn-danger.mr-3(type='submit') Confirm Delete
                  a.btn.btn-secondary(href='/tasks') Cancel
