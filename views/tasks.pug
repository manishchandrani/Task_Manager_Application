extends layout

block content
  .container
    .d-flex.justify-content-between.align-items-center.pb-4
      h1 All Available Tasks
      a(href='/tasks/new').btn.btn-primary Create a New Task

    if tasks.length === 0
      .text-center.mt-5
        h5 No available tasks

    if tasks.length > 0
      table.table.table-striped.mt-4
        thead
          tr
            th Title
            th Description
            th Due Date
            th Completed
            th Actions
        tbody
          each task in tasks
            tr
              td #{task.title}
              td #{task.description}
              td #{task.dueDate}
              td #{task.completed ? 'Yes' : 'No'}
              td
                a(href=`/tasks/${task.id}`).btn.btn-primary.btn-sm View
