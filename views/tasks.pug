extends layout

block content
  .container-fluid
    .row.justify-content-center.mt-5
      .col-md-8
        form(action="/logout", method="post")
          button.btn.btn-primary.mb-4(type="submit", style="background-color: #3da2c3; border-color: #3da2c3;") Sign out
        h1.text-center.mb-5(style="color: #3da2c3;") Welcome #{userName} to Task Manager
        a.btn.btn-primary.mb-4(href='/tasks/new', style="background-color: #3da2c3; border-color: #3da2c3;") Create a New Task
        if tasks.length === 0
          .text-center
            h5(style="color: #3da2c3;") No available tasks
        else
          each task in tasks
            .card.mb-3.shadow-sm(style="border-color: #3da2c3;")
              .card-body
                .d-flex.justify-content-between.align-items-center
                  h5.card-title.mb-0(style="color: #3da2c3;") #{task.title}
                  if task.completed
                    span.badge.bg-success(style="color: #fff;") Completed
                  else
                    span.badge.bg-warning(style="color: #fff;") In Progress
                hr
                a.btn.btn-primary.mb-4(href=`/tasks/${task.id}`, style="background-color: #3da2c3; border-color: #3da2c3;") View Task
